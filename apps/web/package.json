{
  "name": "gittydocs",
  "version": "0.1.0",
  "description": "Turn a GitHub folder of Markdown/MDX into a fast, searchable docs site",
  "type": "module",
  "scripts": {
    "dev": "bun run prepare:docs && concurrently --raw \"bunx velite dev\" \"bunx --bun vike dev\"",
    "build": "bun run prepare:docs && bunx velite build && bun run velite:routes && bunx --bun vike build",
    "preview": "NODE_ENV=production bun run dist/server/index.mjs",
    "preview-static": "vike preview",
    "check": "tsc --noemit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "cleanmods": "rm -rf node_modules",
    "icon": "iconmate --folder src/assets/icons/",
    "prepare:docs": "bun run scripts/prepare-docs.ts",
    "velite:routes": "bun run scripts/gen-velite-routes.ts"
  },
  "dependencies": {
    "@ark-ui/solid": "^5.30.0",
    "@bprogress/core": "^1.3.4",
    "@corvu/drawer": "^0.2.4",
    "@kobalte/core": "^0.13.11",
    "@tailwindcss/vite": "^4.1.18",
    "@t3-oss/env-core": "^0.13.10",
    "@mdx-js/mdx": "^3.1.1",
    "@shikijs/rehype": "^3.14.0",
    "bagon-hooks": "^0.0.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk-solid": "^1.1.2",
    "flexsearch": "^0.8.212",
    "jsonc-parser": "^3.3.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-katex": "^7.0.1",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "solid-js": "1.9.11",
    "solid-jsx": "^1.1.4",
    "solid-sonner": "^0.2.8",
    "solid-transition-group": "^0.3.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "vike": "^0.4.252",
    "vike-metadata-solid": "^1.0.4",
    "vike-solid": "^0.8.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@blankeos/vike-routegen": "^0.0.3",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bun": "^1.3.8",
    "@types/flexsearch": "^0.7.6",
    "@types/node": "^25.1.0",
    "concurrently": "^9.2.1",
    "iconmate": "^1.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "velite": "^0.3.0",
    "vite": "^7.3.1",
    "vite-plugin-solid": "^2.11.10",
    "vite-plugin-solid-svg": "^0.8.1",
    "vite-tsconfig-paths": "^6.0.5"
  },
  "trustedDependencies": []
}
