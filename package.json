{
  "name": "gittydocs",
  "version": "0.1.0",
  "description": "Turn a GitHub folder of Markdown/MDX into a fast, searchable docs site",
  "type": "module",
  "bin": {
    "gittydocs": "dist/cli.js"
  },
  "files": [
    "dist",
    "apps/web",
    "templates",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc -p packages/cli/tsconfig.json --noEmit"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "cac": "^6.7.14",
    "chokidar": "^3.6.0",
    "dotenv": "^16.4.5",
    "jsonc-parser": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  }
}
