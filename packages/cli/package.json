{
  "name": "gittydocs",
  "version": "0.0.3",
  "description": "Turn a GitHub folder of Markdown/MDX into a fast, searchable docs site",
  "license": "MIT",
  "type": "module",
  "bin": {
    "gittydocs": "dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "bun run typecheck",
    "prepack": "bun run sync:web-runtime",
    "sync:web-runtime": "bun run scripts/sync-web-runtime.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "cac": "^6.7.14",
    "chokidar": "^3.6.0",
    "dotenv": "^16.4.5",
    "jsonc-parser": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  }
}
